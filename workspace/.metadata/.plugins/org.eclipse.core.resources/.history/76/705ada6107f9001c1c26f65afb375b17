package Swing;
import javax.swing.JTextField;
import javax.swing.JLabel;
import java.awt.Font;
import javax.swing.JPasswordField;
import javax.swing.JScrollPane;
import javax.swing.JButton;
import javax.swing.JTable;
import javax.swing.border.LineBorder;
import java.awt.Color;

public class InputTable extends BaseFrm{
	private JTextField tfID;
	private JPasswordField passwordField;
	private JLabel lbID, lbPass;
	private JTable table;
	private JButton btnJoin, btnDel;
	private JScrollPane scp;
	
	public static void main(String[] args) {
		new InputTable();
	}
	
	public InputTable() {
	
	}

	@Override
	public void init() {
		getContentPane().setLayout(null);
		
		tfID = new JTextField();
		tfID.setFont(new Font("굴림", Font.PLAIN, 20));
		tfID.setBounds(46, 11, 102, 35);
		tfID.setColumns(10);
		
		lbID = new JLabel("ID");
		lbID.setFont(new Font("Dialog", Font.PLAIN, 20));
		lbID.setBounds(12, 10, 33, 35);
		
		lbPass = new JLabel("Pass");
		lbPass.setFont(new Font("Dialog", Font.PLAIN, 20));
		lbPass.setBounds(160, 10, 52, 34);
		
		passwordField = new JPasswordField();
		passwordField.setFont(new Font("굴림", Font.PLAIN, 20));
		passwordField.setBounds(212, 11, 102, 34);
		
		btnJoin = new JButton("Add");
		btnJoin.setFont(new Font("굴림", Font.BOLD, 20));
		btnJoin.setBounds(326, 11, 92, 35);
		
		btnDel = new JButton("Delecte");
		btnDel.setFont(new Font("굴림", Font.BOLD, 20));
		btnDel.setBounds(426, 11, 102, 35);
		
		table = new JTable();
		table.setBorder(new LineBorder(new Color(0, 0, 0)));
		scp = new JScrollPane();
		scp.add(table);
		table.setBounds(46, 208, 268, -109);
	}

	@Override
	public void arrange() {
		getContentPane().add(tfID);
		getContentPane().add(lbID);
		getContentPane().add(lbPass);
		getContentPane().add(passwordField);
		getContentPane().add(btnJoin);
		getContentPane().add(btnDel);
		getContentPane().add(scp);
		
	}
}
